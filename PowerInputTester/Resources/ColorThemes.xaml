<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkBackgroundColor" Color="#1F1F1F"/>
    <SolidColorBrush x:Key="LightBackgroundColor" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="DarkThemeFontColor" Color="WhiteSmoke"/>

    <Style x:Key="GridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{StaticResource DarkBackgroundColor}"/>
    </Style>

    <Style x:Key="DockPanelStyle" TargetType="{x:Type DockPanel}">
        <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
    </Style>

    <Style x:Key="MenuStyle" TargetType="{x:Type Menu}">
        <Setter Property="Foreground" Value="{StaticResource DarkThemeFontColor}"/>
        <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
    </Style>

    <Style x:Key="MenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Foreground" Value="{StaticResource DarkThemeFontColor}"/>
        <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
    </Style>

    <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource DarkThemeFontColor}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</ResourceDictionary>